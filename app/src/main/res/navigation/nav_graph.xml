<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="com.jam.recipeassistant.DiscoverFragment"
        android:label="Recipe Assistant Chat">
        <action
            android:id="@+id/action_discoverFragment_to_testFragment2"
            app:destination="@id/testFragment2" />
        <action
            android:id="@+id/action_discoverFragment_to_testFragment3"
            app:destination="@id/testFragment3" />
    </fragment>
    <fragment
        android:id="@+id/testFragment2"
        android:name="com.jam.recipeassistant.RecipesFragment"
        android:label="TestFragment2" >
        <action
            android:id="@+id/action_testFragment2_to_testFragment3"
            app:destination="@id/testFragment3" />
        <action
            android:id="@+id/action_testFragment2_to_discoverFragment"
            app:destination="@id/discoverFragment" />
    </fragment>
    <fragment
        android:id="@+id/testFragment3"
        android:name="com.jam.recipeassistant.CreateFragment"
        android:label="TestFragment3">
        <action
            android:id="@+id/action_testFragment3_to_testFragment2"
            app:destination="@id/testFragment2" />
        <action
            android:id="@+id/action_testFragment3_to_discoverFragment"
            app:destination="@id/discoverFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewCreatedRecipesFragment"
        android:name="com.jam.recipeassistant.ViewCreatedRecipesFragment"
        android:label="fragment_view_created_recipes" />
</navigation>