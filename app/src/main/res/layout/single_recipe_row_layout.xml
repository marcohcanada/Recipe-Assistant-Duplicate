<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/beefwellington"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beef Wellington"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By Gordon Ramsay"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes: "
                    android:textColor="#006400"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvDislikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dislikes: "
                    android:textColor="#b22222"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvViews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Views: "
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvWarnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Warnings: "
                    android:textColor="#b8860b"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>